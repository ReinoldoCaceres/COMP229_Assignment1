<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class="h1"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= contact._id %>"
                    >
                    <label for="contactTextField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="contactTextField"
                        placeholder="Enter the Contact Name"
                        name="name" 
                        value="<%= contact.name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="NumberTextField">Phone Number</label>
                    <input type="text" class="form-control"
                    id="NumberTextField"
                    placeholder="(123) 456-7890"
                    name="number" 
                    value="<%= contact.number %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="statusTextField">email</label>
                    <input type="text" class="form-control"
                    id="statusTextField"
                    placeholder="Enter the email"
                    name="email" 
                    value="<%= contact.email %>"
                    >
                </div>
                <br />

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/contact/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>