<%- include ../partials/header -%>


    <!-- <%= ContactList %> -->

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <h1 class="h1"><%= title %></h1>
        <br>
        <div>
            <a href="/contact/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Contact
            </a>                
        </div>
        
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Numer</th>
                    <th class="text-center">Email</th>
                    <th class="text-center" colspan="2">Actions</th>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let i = 0; i < ContactList.length; i++) { %>
                    <tr>
                        <td class="text-center"><%= ContactList[i].name %></td>
                        <td class="text-center"><%= ContactList[i].number %></td>
                        <td class="text-center"><%= ContactList[i].email %></td>
                        <td class="text-center">
                            <a href="/contact/edit/<%= ContactList[i]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/contact/delete/<%= ContactList[i]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>
<%- include ../partials/footer %>